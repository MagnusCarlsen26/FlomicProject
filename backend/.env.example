# Development (local file: backend/.env)
PORT=5000
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mw88hv0.mongodb.net/<dbname>?retryWrites=true&w=majority&appName=Cluster0
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
JWT_SECRET=replace-with-a-long-random-string
# `CORS_ORIGIN` must be origin only (no route path, no surrounding quotes)
# Valid: https://flomicproject.vercel.app
# Invalid: "https://flomicproject.vercel.app/login"
CORS_ORIGIN=http://localhost:5173
SESSION_TTL=7d
SESSION_COOKIE_NAME=flomic_session
SESSION_COOKIE_MAX_AGE_MS=604800000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAME_SITE=lax
# SESSION_COOKIE_DOMAIN=.yourdomain.com

# Production (set these in Vercel dashboard, do not commit secrets)
# PORT=5000
# MONGODB_URI=...
# GOOGLE_CLIENT_ID=...
# JWT_SECRET=...
# `CORS_ORIGIN` can be comma-separated for multiple allowed origins
# CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com
# SESSION_TTL=7d
# SESSION_COOKIE_NAME=flomic_session
# SESSION_COOKIE_MAX_AGE_MS=604800000
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_SAME_SITE=none
# SESSION_COOKIE_DOMAIN=.yourdomain.com
